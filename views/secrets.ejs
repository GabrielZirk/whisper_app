<%- include('partials/header') %>

  <div class="jumbotron text-center">
    <div class="container">
      <i class="fa-solid fa-user-secret fa-8x"></i>
      <h1 class="display-3">Discover The Deepest Secrets Of Mankind!</h1>

      <% for (let i=0; i < secret.length; i++) { %>
        <p class="secret-text">
          <%= secret[i].secret %>
        </p>
        <% } %>
          <hr>

          <a class="btn btn-light btn-lg" href="<%=loginStatusRoute%>" role="button"><%=loginStatus%></a>
          <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
          <br>
          <form method="POST" acton="/secrets">
            <input type="checkbox" name="<%=toShow%>" value="true" onChange="this.form.submit()" />
            <p class="mySecrets">
              <%= displayedSecrets %>
            </p>
            <a href="/manage"><h5>Click here to manage your secrets.</h5></a>
          </form>

    </div>
  </div>

  <%- include('partials/footer') %>